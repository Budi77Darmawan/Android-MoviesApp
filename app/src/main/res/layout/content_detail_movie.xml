<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fillViewport="true"
    android:paddingHorizontal="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/textView_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/plot_summary"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/shimmerSecond"
        app:layout_constraintTop_toBottomOf="@id/textView_content"
        tools:text="Semper semper ut. Nisi mus sodales. Eleifend taciti nibh. Dictum lacinia luctus tincidunt sollicitudin tellus viverra massa integer nisl eleifend ipsum urna sociis orci a tellus pharetra mattis Proin hymenaeos dignissim erat adipiscing, proin. Sem mauris eget purus, habitasse fames adipiscing cubilia, senectus tincidunt rutrum rutrum felis inceptos fringilla proin penatibus suscipit vestibulum lobortis semper augue vehicula condimentum semper commodo elementum praesent porttitor velit sem fermentum felis urna vel cras dui odio nonummy quisque consectetuer non consectetuer etiam erat auctor leo erat lacus.." />

    <TextView
        android:id="@+id/textView_cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/cast"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/textView_cast"
        tools:itemCount="3" />

</androidx.constraintlayout.widget.ConstraintLayout>