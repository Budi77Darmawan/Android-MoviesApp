<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_grid_actor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/shimmerPrimary"
    app:shimmer_colored="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <View
            android:id="@+id/view_type_actor"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@color/shimmerText"
            app:layout_constraintDimensionRatio="2:3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_actor"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_marginTop="20dp"
            android:background="@color/shimmerSecond"
            app:layout_constraintDimensionRatio="2:3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_type_actor" />

        <View
            android:id="@+id/view_title_actor"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="#575757"
            app:layout_constraintEnd_toEndOf="@id/view_actor"
            app:layout_constraintStart_toStartOf="@id/view_actor"
            app:layout_constraintBottom_toBottomOf="@id/view_actor" />

        <View
            android:id="@+id/view_actor_2"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_marginStart="20dp"
            android:background="@color/shimmerSecond"
            app:layout_constraintDimensionRatio="2:3"
            app:layout_constraintStart_toEndOf="@id/view_actor"
            app:layout_constraintTop_toTopOf="@id/view_actor" />

        <View
            android:id="@+id/view_title_actor_2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="#575757"
            app:layout_constraintEnd_toEndOf="@id/view_actor_2"
            app:layout_constraintStart_toStartOf="@id/view_actor_2"
            app:layout_constraintBottom_toBottomOf="@id/view_actor_2" />

        <View
            android:id="@+id/view_actor_3"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_marginStart="20dp"
            android:background="@color/shimmerSecond"
            app:layout_constraintDimensionRatio="2:3"
            app:layout_constraintStart_toEndOf="@id/view_actor_2"
            app:layout_constraintTop_toTopOf="@id/view_actor_2" />

        <View
            android:id="@+id/view_title_actor_3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="#575757"
            app:layout_constraintEnd_toEndOf="@id/view_actor_3"
            app:layout_constraintStart_toStartOf="@id/view_actor_3"
            app:layout_constraintBottom_toBottomOf="@id/view_actor_3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>